<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false">
            <tag name="console.command"/>
        </defaults>

        <service id="yokai.versioning.command.initialize"
                 class="Yokai\Versioning\Bridge\Symfony\Console\Command\InitializeCommand">
            <argument type="service" id="yokai.versioning.initializer"/>
            <argument type="service" id="yokai.versioning.types_config"/>
        </service>

        <service id="yokai.versioning.command.purge"
                 class="Yokai\Versioning\Bridge\Symfony\Console\Command\PurgeCommand">
            <argument type="service" id="yokai.versioning.purger"/>
        </service>
    </services>
</container>
