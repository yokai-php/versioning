<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false"/>

        <service id="yokai.versioning.symfony_serializer"
                 class="Yokai\Versioning\Bridge\Symfony\Serializer\Serializer">
            <argument type="tagged" tag="yokai.versioning.symfony_normalizer"/>
            <argument type="tagged" tag="yokai.versioning.symfony_encoder"/>
        </service>

        <service id="yokai.versioning.snapshot_taker.symfony_serializer"
                 class="NormalizerSnapshotTaker">
            <argument type="service" id="yokai.versioning.symfony_serializer"/>
        </service>
    </services>
</container>
