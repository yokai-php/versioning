<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false"/>

        <service alias="yokai.versioning.author_finder"
                 id="Yokai\Versioning\Finder\AuthorFinder"/>

        <service alias="yokai.versioning.version_finder"
                 id="Yokai\Versioning\Finder\VersionFinder"/>

        <service alias="yokai.versioning.purger"
                 id="Yokai\Versioning\Purge\ChainPurger"/>
    </services>
</container>
